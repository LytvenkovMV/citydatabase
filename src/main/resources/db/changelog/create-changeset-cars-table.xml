<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="create_table_cars" author="vitek">
        <!-- Прописываем создание таблицы -->
        <createTable tableName="cars">
            <!--Создаем поля -->
            <column autoIncrement="true" name="id" type="serial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="gos_number" type="varchar(12)">
                <constraints nullable="false"/>
            </column>
            <column name="brand" type="varchar(25)"/>
            <column name="model" type="varchar(25)"/>
            <column name="color" type="varchar(25)"/>
            <column name="person_id" type="integer">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="add_fk_person_id" author="vitek">
        <!-- Прописываем внешний ключ -->
        <addForeignKeyConstraint baseColumnNames="person_id"
                                 baseTableName="cars"
                                 constraintName="fk_person_id"
                                 referencedColumnNames="id"
                                 referencedTableName="persons"/>
    </changeSet>
</databaseChangeLog>