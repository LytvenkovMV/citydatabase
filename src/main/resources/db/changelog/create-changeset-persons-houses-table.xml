<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="create_table_persons_houses" author="vitek">
        <!-- Прописываем создание таблицы -->
        <createTable tableName="persons_houses">
            <!--Создаем поля -->
            <column name="person_id" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="house_id" type="integer">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="add_fk_person_id_house_id" author="vitek">
        <!-- Прописываем внешний ключ -->
        <addForeignKeyConstraint baseColumnNames="person_id"
                                 baseTableName="persons_houses"
                                 constraintName="fk_person_id"
                                 referencedColumnNames="id"
                                 referencedTableName="persons"/>
        <addForeignKeyConstraint baseColumnNames="house_id"
                                 baseTableName="persons_houses"
                                 constraintName="fk_house_id"
                                 referencedColumnNames="id"
                                 referencedTableName="houses"/>
    </changeSet>
</databaseChangeLog>